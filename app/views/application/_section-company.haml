- history = StaticBlock.find_by_id 5
%a#s-history.d-scroll{ "down" => "s-client", "top" => "s-history"}
- if history
  .cf
    .block{:style => "margin: 220px auto 140px; width: 60%; "}
      %h1= history.title
      = raw history.content

.cf
  - client = StaticBlock.find_by_id 6
  - if client
    .block.inline.summary#summary1{:style => "margin: 0 0 0 20%; width: 220px"}
      %h1=client.title
      = raw client.content


  %a#s-client.d-scroll{ "down" => "s-expert", "top" => "s-history"}
  - clients = Client.all
  - if clients.present?
    .block.images#scroll1.right
      %ul.cf
        - clients.each do |cl|
          %li
            = image_tag cl.image(:medium)
            %span=cl.title


.cf{:style => "margin: 180px 0;"}
  - expert = StaticBlock.find_by_id 7
  - if expert
    .block.inline#summary2{:style => "margin: 0 0 0 13%; width: 350px"}
      %h1=expert.title
      = raw expert.content


  %a#s-expert.d-scroll{ "down" => "s-expert" ,"top" => "s-client"}
  - experts = Specialist.all
  - if experts.present?
    .block.right.experts.sliders#scroll2
      %ul
        - experts.each do |ex|
          %li.slide.a-show
            = image_tag ex.avatar(:medium)
            .inline
              %span= ex.name
              %em= ex.position
