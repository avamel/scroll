              %a.item-close{:href => "#"} Ã—
              .controls
                .control.prev  <
                .control.next >
              .item-img
                = image_tag ex.avatar(:medium)
              .item-info
                %h3= ex.name
                %span.position= ex.position
                .content
                  = raw ex.content




