- line = StaticBlock.find_by_id 9
- if line
  .cf
    .block.right{:style => "width: 640px; margin: 20% 30% 0 0"}
      %h1= line.title
      = raw line.content


- line_of_work = LineOfWork.all
- if line_of_work
  .sliders.line_of_works.cf{ :scroll => "true" }
    - line_of_work.each do |line|

      .block.right.slide{:class => "line_of_work_#{line.id}" }
        %h1= line.title
        = raw line.content
        - if line.popup_content.present?
          = link_to "Подробнее", "#", :class => "a-show"
          .more.cf
            %a.item-close{:href => "#"} ×
            .controls
              .control.prev  <
              .control.next >
            .item-info
              %h3= line.title
              = raw line.popup_content
              .help-block
                - line.projects.each do |pr|
                  %span=pr.title



- other_line = StaticBlock.find_by_id 10
- if other_line
  .cf
    .block.right.line_of_works{:style => "width: 720px; margin: 15% 35% 0 0"}
      %h1= other_line.title
      = raw other_line.content




.cf
  - experience = StaticBlock.find_by_id 8
  - if experience
    .block.inline{:style => "margin: 10% 0 0 25%; width: 320px"}
      %h1=experience.title
      = raw experience.content

.cf
  - project_general = Project.get_general
  - if project_general
    .block.inline{:style => "margin: 10% 0 0 15%; width: 290px"}
      %h1=project_general.title
      = image_tag project_general.project_images.first.image(:big)


.cf
  - projects = Project.all
  - if projects.present?
    .sliders.block.images.scroll-block.right{:style => "margin: 0 auto 100px auto; right: 25%"}
      %ul.cf
        - projects.each do |project|
          %li.slide.a-show
            = image_tag project.project_images.first.image(:medium)
            %span=project.title
            .more.cf
              %a.item-close{:href => "#"} ×
              .controls
                .control.prev  <
                .control.next >
              .item-info
                %h3= project.title
                / = raw project.content
                / .help-block
                /   - project.line_of_works.each do |line|
                /     %span=line.title











