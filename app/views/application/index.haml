:css
  #section-0{
   background: url(#{get_bg 'index'}) no-repeat;
  }
  #section-1{
   background: url(#{get_bg 'company'}) no-repeat;
  }
  #section-2{
   background: url(#{get_bg 'directions'}) no-repeat;
  }
  #section-3{
   background: url(#{get_bg 'experience'}) no-repeat;
  }
  #section-4{
   background: url(#{get_bg 'сontacts'}) no-repeat;
  }

.main
  #menu.cf
    %ul.m
      %li#menu-index
        %a.curtain-links#s0{:href => "#section-0"}
      %li
        %a.curtain-links#s1{:href => "#section-1"} Компания
      %li
        %a.curtain-links#s2{:href => "#section-2"} Направления работы
      %li
        %a.curtain-links#s3{:href => "#section-3"} Опыт
      %li
        %a.curtain-links#s4{:href => "#section-4"} Контакты

    #slider-block
      = link_to_function "HR-Tema", "setHome();", :id => "logo"
      #slider
      - social = get_block("social")
      - if social
        #social-block
          #social
            = raw social.content


  #scroll-btn
    %a.up{:href => "#up", :style => ""} <
    %a.down{:href => "#down"} >



%ol.curtains
  %li#section-0.section
    .container
      .main
        .scroll
          = render :partial => "section-index"
  %li#section-1.section
    .container
      .main
        .scroll
          = render :partial => "section-company"

  %li#section-2.section
    .container
      .main
        .scroll
          = render :partial => "section-directions"

  %li#section-3.section
    .container
      .main
        .scroll
          = render :partial => "section-experience"

  %li#section-4.section
    .container
      .main
        .scroll
          = render :partial => "section-сontacts"



