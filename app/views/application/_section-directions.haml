- history = StaticBlock.find_by_id 5
- if history
  .cf
    .block{:style => "margin: 300px auto 140px; width: 685px; "}
      %h1= history.title
      = raw history.content



.cf
  - client = StaticBlock.find_by_id 6
  - if client
    .block.inline.summary#summary1
      %h1=client.title
      = raw client.content

  - clients = Client.all
  - if clients.present?
    .block.images#scroll1.right{:style => "margin: 0 auto 200px auto; right: 25%"}
      %ul.cf
        - 4.times do
          - clients.each do |cl|
            %li
              = image_tag cl.image(:medium)
              %span=cl.title

.cf
  - expert = StaticBlock.find_by_id 7
  - if expert
    .block.inline#summary2
      %h1=expert.title
      = raw expert.content


  - experts = Specialist.all
  - if experts.present?
    .block.right.experts.sliders#scroll2{:style => "margin: 0 auto 200px auto; right: 12%"}
      %ul
        - 4.times do
          - experts.each do |ex|
            %li.slide.a-show
              = image_tag ex.avatar(:medium)
              .inline
                %span= ex.name
                %em= ex.position
              .more.cf
